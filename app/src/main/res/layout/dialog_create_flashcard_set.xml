<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Loo sõnakaartide grupp"
        android:id="@+id/flashcard_set_dialog_textview"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="200dp"
        android:textSize="21sp"
        android:autoSizeMinTextSize="15sp"/>

    <EditText
        android:id="@+id/flashcard_set_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:hint="Sõnakaartide grupi nimi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Katkesta"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/katkesta_flashcard_set"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/blue"
            />

        <Button
            android:id="@+id/loo_flashcard_set"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="Loo"
            android:textColor="@color/blue" />
    </LinearLayout>

</LinearLayout>